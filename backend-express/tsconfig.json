{
  "compilerOptions": {
    "target": "ES2015", 
    "module": "commonjs", 
    "baseUrl": "./",   
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "rootDir": "./src", 
    "outDir": "./dist",                                   
    "strict": true,  
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
